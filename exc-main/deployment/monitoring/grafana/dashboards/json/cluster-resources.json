{
  "title": "Cluster Resources",
  "schemaVersion": 38,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU usage (per pod)",
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{container!=""}[5m]))",
          "legendFormat": "{{pod}}"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "Memory working set (per pod)",
      "targets": [
        {
          "expr": "sum by (pod) (container_memory_working_set_bytes{container!=""})",
          "legendFormat": "{{pod}}"
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8}
    }
  ]
}


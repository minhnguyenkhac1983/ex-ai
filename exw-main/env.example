# =====================================================
# VIETNAM E-WALLET EXCHANGE - ENVIRONMENT VARIABLES
# =====================================================

# Application Configuration
NODE_ENV=development
APP_NAME=Vietnam E-Wallet Exchange
APP_VERSION=1.0.0
APP_PORT=3000
APP_HOST=localhost
APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://ewallet:ewallet@localhost:5432/ewallet
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ewallet
DATABASE_USER=ewallet
DATABASE_PASSWORD=ewallet
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=ewallet:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900000
API_TIMEOUT=30000

# Payment Gateway Configuration
# VNPay
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3000/payment/vnpay/return
VNPAY_IPN_URL=http://localhost:3000/payment/vnpay/ipn

# MoMo
MOMO_PARTNER_CODE=your-momo-partner-code
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create

# ZaloPay
ZALOPAY_APP_ID=your-zalopay-app-id
ZALOPAY_KEY1=your-zalopay-key1
ZALOPAY_KEY2=your-zalopay-key2
ZALOPAY_ENDPOINT=https://sb-openapi.zalopay.vn/v2/create

# Banking Integration
NAPAS_MERCHANT_ID=your-napas-merchant-id
NAPAS_SECRET_KEY=your-napas-secret-key
NAPAS_ENDPOINT=https://api.napas.com.vn

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@ewallet.vn
SENDGRID_FROM_NAME=Vietnam E-Wallet Exchange

# Push Notification Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# File Storage Configuration
STORAGE_PROVIDER=aws-s3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=ewallet-storage
AWS_S3_ENDPOINT=https://s3.ap-southeast-1.amazonaws.com

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3001
JAEGER_ENDPOINT=http://localhost:14268

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Feature Flags
FEATURE_CRYPTO_ENABLED=false
FEATURE_BIOMETRIC_ENABLED=true
FEATURE_QR_PAYMENT_ENABLED=true
FEATURE_NFC_PAYMENT_ENABLED=false
FEATURE_MULTI_CURRENCY_ENABLED=false

# KYC Configuration
KYC_PROVIDER=local
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret
KYC_ENDPOINT=https://api.kyc-provider.com

# Fraud Detection Configuration
FRAUD_DETECTION_ENABLED=true
FRAUD_DETECTION_THRESHOLD=0.7
ML_MODEL_ENDPOINT=http://localhost:8000/predict

# Compliance Configuration
COMPLIANCE_PCI_DSS=true
COMPLIANCE_GDPR=true
COMPLIANCE_PDPA=true
AUDIT_LOG_ENABLED=true

# Development Configuration
DEBUG=true
MOCK_PAYMENTS=false
MOCK_SMS=false
MOCK_EMAIL=false

# Production Configuration (Override in production)
# NODE_ENV=production
# APP_URL=https://ewallet.vn
# DATABASE_SSL=true
# REDIS_PASSWORD=your-redis-password
# JWT_SECRET=your-production-jwt-secret
# ENCRYPTION_KEY=your-production-encryption-key
# CORS_ORIGIN=https://ewallet.vn,https://merchant.ewallet.vn
# LOG_LEVEL=warn
# DEBUG=false
